%h1.text-center
  Account
.container
  - User::EDITABLE_COLUMNS.each_value do |column|
    .row
      .col-12.col-md-6.offset-md-3.d-flex.justify-content-between
        %div
          .font-weight-bold
            = User.editable_column_labels[column]
          %div
            = current_user.send(column)
        %div
          %button.btn{type: :button, class: component_classes(DarkMode::CLASSES[:btn_docile]), 'data-toggle' => 'modal', 'data-target' => "#update-#{column}-modal" }
            = "Change #{User.editable_column_labels[column].downcase}"

- User::EDITABLE_COLUMNS.each_value do |column|
  = render "shared/update_user_column_modals/update_#{column}_modal"
