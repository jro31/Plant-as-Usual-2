.container
  .row
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
      %h2
        Log in

      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-inputs
          = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, input_html: { class: component_classes(DarkMode::CLASSES[:input_edit]) }
          = f.input :password, required: false, input_html: { autocomplete: "current-password" }, input_html: { class: component_classes(DarkMode::CLASSES[:input_edit]) }
          = f.input :remember_me, as: :boolean, input_html: { class: component_classes(DarkMode::CLASSES[:input_edit]) } if devise_mapping.rememberable?

        .form-actions
          = f.button :submit, "Log in", class: "btn #{component_classes(DarkMode::CLASSES[:btn_keen])}"

      .mt-2
        = render "devise/shared/links"
