.container
  .row
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
      %h2
        Sign up

      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .form-inputs
          = f.input :username, required: true, autofocus: true, label: 'Display name', hint: 'This will be visible to other users', input_html: { class: component_classes(DarkMode::CLASSES[:input_edit]) }
          = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, input_html: { class: component_classes(DarkMode::CLASSES[:input_edit]) }
          = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }, input_html: { class: component_classes(DarkMode::CLASSES[:input_edit]) }
          = f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, input_html: { class: component_classes(DarkMode::CLASSES[:input_edit]) }

        .form-actions
          = f.button :submit, "Sign up", class: "btn #{component_classes(DarkMode::CLASSES[:btn_keen])}"

      .mt-2
        = render "devise/shared/links"
