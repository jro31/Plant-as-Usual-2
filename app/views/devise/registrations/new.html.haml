.container
  .row
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
      %h2
        Sign up

      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .form-inputs
          = f.input :username, required: true, autofocus: true, label: 'Display name', hint: 'This will be visible to other users.', input_html: { class: component_classes(DarkMode::CLASSES[:input_edit]) }
          = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", class: component_classes(DarkMode::CLASSES[:input_edit]) }
          = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password", class: component_classes(DarkMode::CLASSES[:input_edit]) }
          = f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password", class: component_classes(DarkMode::CLASSES[:input_edit]) }
          = f.input :twitter_handle, required: false, placeholder: '@plantasusual', hint: 'Optional. This will be visible to other users.', input_html: { class: component_classes(DarkMode::CLASSES[:input_edit]) }
          = f.input :instagram_handle, required: false, label: 'Instagram username', placeholder: 'plantasusual', hint: 'Optional. This will be visible to other users.', input_html: { class: component_classes(DarkMode::CLASSES[:input_edit]) }
          = f.input :website_url, required: false, label: 'Personal website', placeholder: 'https://www.plantasusual.com/', hint: 'Optional. This will be visible to other users.', input_html: { class: component_classes(DarkMode::CLASSES[:input_edit]) }

        .form-actions
          = f.button :submit, "Sign up", class: "btn #{component_classes(DarkMode::CLASSES[:btn_keen])}"

      .mt-2
        = render "devise/shared/links"
